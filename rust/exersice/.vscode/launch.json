{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "linux": {    // Linux 系统下的配置
                "program": "${workspaceFolder}/target/debug/exersice",
                "MIMode": "gdb",
                "externalConsole": true,
            },
            "osx": {    // OS X系统下的配置
                "program": "${workspaceFolder}/target/debug/exersice",
                "MIMode": "lldb",
                "externalConsole": true,
            },
            "windows": {    // Windows 系统下的配置
                "program": "${workspaceFolder}/target/debug/exersice.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "gdb.exe",
                "externalConsole": false,
            }
        }
    ]
}